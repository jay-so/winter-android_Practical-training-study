<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:text="2월 SPECIAL"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ViewFlipper
            android:id="@+id/vFlipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDFDFD">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/imgnoti1" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/imgnoti2"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/imgnoti3"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/imgnoti4"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/imgnoti5"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/imgnoti6"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/imgnoti7"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/imgnoti8"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/imgnoti9"/>
        </ViewFlipper>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="상영중인 영화"/>


    <ViewFlipper
        android:id="@+id/vFlipper2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FDFDFD">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:src="@drawable/chart1"/>
        <ImageView
            android:layout_width="125dp"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:src="@drawable/chart2"/>
        <ImageView
            android:layout_width="125dp"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:src="@drawable/chart3"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="125dp"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:src="@drawable/chart4"/>
            <ImageView
                android:layout_width="125dp"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:src="@drawable/chart5"/>
            <ImageView
                android:layout_width="125dp"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:src="@drawable/chart6"/>
        </LinearLayout>
    </ViewFlipper>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/btnEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Event"
        android:layout_margin="5dp"
        android:backgroundTint="#00cccc"
        android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_Chart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="무비차트"
            android:layout_margin="5dp"
            android:backgroundTint="#2196F3"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>